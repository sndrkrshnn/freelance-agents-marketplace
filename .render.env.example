# ============================================
# Render.com Environment Variables
# Freelance AI Agents Marketplace - Production
# ============================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to Git!

# =============================================
# Node Configuration
# =============================================
NODE_ENV=production
PORT=5000

# =============================================
# Database (Render PostgreSQL)
# Render will automatically inject DATABASE_URL
# Format: postgres://user:password@host:port/database
# =============================================
DATABASE_URL=postgresql://user:password@host:5432/freelance_agents_marketplace

# =============================================
# Redis Cache (Render Redis)
# Render will automatically inject REDIS_URL
# Format: redis://host:port
# =============================================
REDIS_URL=redis://host:6379

# =============================================
# JWT Authentication Secrets
# Generate these using: openssl rand -base64 32
# =============================================
JWT_SECRET=your-jwt-secret-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-jwt-refresh-secret-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=30d

# =============================================
# CORS Configuration
# Replace with your Vercel frontend URL
# =============================================
CORS_ORIGIN=https://freelance-agents-marketplace.vercel.app
FRONTEND_URL=https://freelance-agents-marketplace.vercel.app

# =============================================
# Stripe Payment Configuration
# Get these from https://dashboard.stripe.com/
# =============================================
# Secret Key (Test or Live)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
# Public Key (Test or Live) - This goes in frontend
# STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key_here
# Webhook Secret (for Stripe webhooks)
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
# Webhook Endpoint (Render will add this)
STRIPE_WEBHOOK_ENDPOINT=https://your-api.onrender.com/api/payments/webhook

# =============================================
# Email Configuration (Optional)
# Used for sending notifications, password resets
# =============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@freelanceagents.com
EMAIL_FROM_NAME=Freelance AI Marketplace

# =============================================
# File Upload Configuration
# =============================================
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR=./uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx,zip

# =============================================
# Rate Limiting Configuration
# =============================================
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESS_REQUESTS=false

# =============================================
# Session Configuration (if using sessions)
# =============================================
SESSION_SECRET=your-session-secret-change-this
SESSION_MAX_AGE=86400000  # 24 hours

# =============================================
# WebSocket Configuration
# =============================================
WS_PATH=/ws
WS_HEARTBEAT_INTERVAL=30000

# =============================================
# Logging Configuration
# =============================================
LOG_LEVEL=info  # error, warn, info, debug
LOG_FORMAT=json
LOG_MAX_FILES=14
LOG_MAX_SIZE=20m

# =============================================
# API Configuration
# =============================================
API_VERSION=v1
API_PREFIX=/api
API_DOCS_ENABLED=true

# =============================================
# Performance Configuration
# Render Free Tier: 512MB RAM, 0.1 CPU
# =============================================
NODE_OPTIONS=--max-old-space-size=384

# =============================================
# Security Configuration
# =============================================
HELMET_ENABLED=true
RATE_LIMIT_ENABLED=true
CORS_ENABLED=true
XSS_PROTECTION=true

# =============================================
# Monitoring & Analytics (Optional)
# =============================================
# Sentry for error tracking
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# Analytics tracking
# ANALYTICS_ID=your-analytics-id

# =============================================
# Feature Flags
# =============================================
FEATURE_WEBHOOKS_ENABLED=true
FEATURE_REALTIME_ENABLED=true
FEATURE_FILE_UPLOADS_ENABLED=true
FEATURE_SEARCH_ENABLED=true

# =============================================
# Render-Specific Variables
# =============================================
# Render-specific configuration
# These are set by Render automatically
# RENDER=true
# RENDER_SERVICE_NAME=freelance-agents-marketplace-api
# RENDER_EXTERNAL_URL=https://your-api.onrender.com
