# Backend Production Environment Variables

# Server Configuration
NODE_ENV=production
PORT=5000
API_BASE_URL=https://api.freelance-agents.com
FRONTEND_URL=https://freelance-agents.com

# Database Configuration
DB_HOST=prod-db.postgres.database.azure.com
DB_PORT=5432
DB_NAME=freelance_agents_production
DB_USER=prod_user
DB_PASSWORD=${PROD_DB_PASSWORD}
DATABASE_URL=postgresql://${DB_USER}:${PROD_DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}
DATABASE_POOL_MIN=5
DATABASE_POOL_MAX=20

# JWT Configuration
JWT_SECRET=${PROD_JWT_SECRET}
JWT_EXPIRE=7d
JWT_REFRESH_EXPIRE=30d

# Stripe Configuration (Use live keys for production)
STRIPE_SECRET_KEY=${PROD_STRIPE_SECRET_KEY}
STRIPE_WEBHOOK_SECRET=${PROD_STRIPE_WEBHOOK_SECRET}
STRIPE_PUBLISHABLE_KEY=pk_live_example
STRIPE_WEBHOOK_ENDPOINT=/api/payments/webhook

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200
RATE_LIMIT_SKIP_SUCCESS_REQUESTS=true

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=logs/app.log
LOG_MAX_SIZE=104857600    # 100MB
LOG_MAX_FILES=10

# Security Configuration
CORS_ORIGIN=https://freelance-agents.com
HELMET_ENABLED=true
XSS_PROTECTION=true
HSTS_ENABLED=true
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=true

# Redis Configuration
REDIS_HOST=prod-redis.redis.cache.windows.net
REDIS_PORT=6380
REDIS_PASSWORD=${PROD_REDIS_PASSWORD}
REDIS_DB=0
REDIS_TLS=true

# Email Configuration
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=${SENDGRID_API_KEY}
SMTP_FROM=noreply@freelance-agents.com

# File Upload Configuration
UPLOAD_MAX_FILE_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf
UPLOAD_DIR=/var/uploads
USE_AZURE_STORAGE=true
AZURE_STORAGE_CONNECTION_STRING=${AZURE_STORAGE_CONNECTION_STRING}
AZURE_STORAGE_CONTAINER=uploads

# Monitoring & Observability
SENTRY_DSN=${PROD_SENTRY_DSN}
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_VERIFICATION_EMAIL=true
ENABLE_STRIPE_WEBHOOKS=true
ENABLE_ANALYTICS=true

# Admin Configuration
ADMIN_EMAIL=admin@freelance-agents.com
ADMIN_SECRET=${PROD_ADMIN_SECRET}

# Elasticsearch Configuration
ELASTICSEARCH_NODE=https://elasticsearch-prod.azurewebsites.net
ELASTICSEARCH_INDEX=marketplace
ELASTICSEARCH_USERNAME=${ELASTICSEARCH_USERNAME}
ELASTICSEARCH_PASSWORD=${ELASTICSEARCH_PASSWORD}
